<VirtualHost 77.73.6.229>
  ServerName  www.cursivedata.co.uk
  ServerAlias cursivedata.co.uk
  DocumentRoot /home/polarsite/cursivedata/www
  WSGIDaemonProcess cursivedata display-name=cursivedata user=polarsite group=polarsite processes=2 threads=15 python-path=/home/polarsite/.virtualenvs/polarsite/lib/python2.6/site-packages/:/home/polarsite/cursivedata/www/ home=/home/polarsite/cursivedata/www/
  WSGIProcessGroup cursivedata
  WSGIScriptAlias / /home/polarsite/cursivedata/www/www/wsgi.py

	Alias /data /home/polarsite/cursivedata/www/data
	<Directory /home/polarsite/cursivedata/www/data>
		SetHandler none
		Order allow,deny
		Allow from all
	</Directory>

	Alias /media /home/polarsite/cursivedata/www/media
	<Directory /home/polarsite/cursivedata/www/media>
		SetHandler none
		Order allow,deny
		Allow from all
	</Directory>

  # Logfiles
  ErrorLogFormat "[%t] [%p] %M"
  ErrorLog  /home/polarsite/cursivedata/www/log/error.log
  CustomLog /home/polarsite/cursivedata/www/log/access.log combined
</VirtualHost>

